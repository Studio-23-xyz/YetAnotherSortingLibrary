<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>2TakarDeveloper</Authors>
    <Company>2TakarDeveloper</Company>
    <Product>Yet Another Sorting Library</Product>
    <Description>Just as the name suggests this is just another sorting library for .Net Core.</Description>
    <PackageProjectUrl>https://warhammer4000.github.io/YetAnotherSortingLibrary/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Warhammer4000/YetAnotherSortingLibrary</RepositoryUrl>
    <RepositoryType>Open Source</RepositoryType>
    <Copyright>Copyright (c) 2020, Tanimul Haque Khan</Copyright>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageTags>Sorting</PackageTags>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageId>DTD.Sort.Net</PackageId>
    <SignAssembly>false</SignAssembly>
    <PackageIcon>Icon.jpg</PackageIcon>
    <PackageLicenseExpression></PackageLicenseExpression>
    <Version>1.0.0</Version>
    <AssemblyName>DTD.Sort.Net.Main</AssemblyName>
    <RootNamespace>DTD.Sort.Net.Main</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\DTD.Sort.Net.Enums\DTD.Sort.Net.Enums.csproj" />
    <ProjectReference Include="..\DTD.Sort.Net.Interfaces\DTD.Sort.Net.Interfaces.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Common\" />
    <Folder Include="Properties\" />
    <Folder Include="Resources\" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\Icon.jpg">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\LICENSE" Link="Resources\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>
</Project>
